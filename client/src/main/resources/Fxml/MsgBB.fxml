<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<HBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="dev.nextchat.client.controllers.messages.MsgBBController"
            fx:id="bubbleBox">
    <children>
        <VBox>
            <children>
                <Label fx:id="senderNameLabel" styleClass="sender-name-label"/> <Label fx:id="msgLabel" style="-fx-background-radius: 15; -fx-padding: 5,5,-3,10; -fx-font-size: 15px" wrapText="true"/>
            </children>
            <padding>
                <Insets right="5"/> </padding>
        </VBox>
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>

</HBox>
